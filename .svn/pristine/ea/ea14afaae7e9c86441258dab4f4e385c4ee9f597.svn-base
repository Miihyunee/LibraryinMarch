<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="book">
<select id="list_search" resultType="book.BookDTO">
	select b_id, b_name, b_author, b_pub, b_year, b_category from sl_book where ${search_option} like '%' || #{keyword} || '%' order by b_id
</select>
<select id="select_cg" resultType="book.BookDTO">
	select distinct b_category from sl_book;
</select>
</mapper>