<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="res_book">

<!--예약신청 기능-->
<insert id="insert_book">
	insert into re_book (
	r_num,
	r_memno,
    r_bookid,
    r_reservation) 
    values (
    re_book_seq.nextval,
    (select m_no from sl_member where m_id = #{m_id}),
    #{r_bookid},
    ( select nvl(max(r_reservation) + 1,1)
    from re_book
    where r_bookid = #{r_bookid}
    )
)
</insert>

<!-- 사용자 예약도서 리스트 -->
<select id="myReBook" resultType="admin.l_book.ReBookDTO">
	select
	r_memno,
	b_id,
	b_name,
	b_author,
	b_pub,
	b_year,
	b_url,
	to_char(r_regdate, 'yyyy-mm-dd')r_regdate,
	r_reservation,
	( SELECT
	COUNT(*)
	FROM
	sl_member, re_book
	WHERE
	m_no = (select m_no from sl_member
	where m_id = #{r_memno} and m_no = r_memno)
	)
	re_book_cnt
	from
	sl_book,re_book
	where
	r_memno = (select m_no from sl_member
	where m_id = #{r_memno})
	and b_id = r_bookid
	order by r_regdate
</select>

</mapper>