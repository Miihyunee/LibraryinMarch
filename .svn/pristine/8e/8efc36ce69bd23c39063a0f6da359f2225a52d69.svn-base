<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<% request.setCharacterEncoding("utf-8"); %>
<script src="http://code.jquery.com/jquery-3.7.1.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="//t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script>

<link rel="icon" href="../resources/images/sist.png" type="image/x-icon">
<title>3월 도서관</title>


 
<!-- 전화번호 자동 하이픈 생성(정규식) -->
<script>
function oninputPhone(mTel) { 	
	mTel.value = mTel.value
        .replace(/[^0-9]/g, '')
        .replace(/(^02.{0}|^01.{1}|[0-9]{3,4})([0-9]{4})([0-9]{4})/g, "$1-$2-$3");
}
</script>

<c:if test="${param.message=='join'}">
	<script>
		alert("회원가입이 완료되었습니다.");
	</script>
</c:if>

</head>
<body>
<h2 align="center">회원가입</h2>
	<form method="post" name="form1"	action="/syLibrary/member_servlet/join.do">
		<table border="1" align="center">

			<tr>
				<td>*이름</td>
				<td><input id="mName" type="text" name="mName" required></td>
			</tr>
			<tr>
				<td>*아이디</td>
				<td><input type="text" name="mId" required></td>
			</tr>
			<tr>
				<td>*비밀번호</td>
				<td><input id="mPasswd" type="password" name="mPasswd" required></td>
			</tr>
			<tr>
				<td>*전화번호</td>
				<td><input type="text" name="mTel" class="form-control"
					oninput="oninputPhone(this)" placeholder="ex) 01012345678"
					maxlength="15" required></td>
			</tr>

			<tr>
				<td>*생년월일</td>
				<td><input id="mBirthDate" type="date" name="mBirthDate"
					required></td>

			</tr>
			<tr>
				<td>*이메일</td>
				<td><input type="email" id="mEmail" name="mEmail"
					placeholder="ex) mm123@naver.com" required></td>
			</tr>

			<tr>
				<td>*주소</td>
				<td>
				<input type="text" id="mAddress" name="mAddress" placeholder="우편번호">
				<p>  *(시/도/구)만 작성해주세요</p>
				</td>
			</tr>

			<tr>
				<td colspan="2" align=center>	
				<input type="submit" value="회원가입"></td>
			</tr>
		</table>
	</form>
<script src="//t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script>
</body>

</html>