<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="review">
<select id="review_insert" statementType="CALLABLE">
	{call review_insert(#{m_id}, #{b_id}, #{contents})
</select>

<select id="getReviews" resultType="review.ReviewDTO">
select rownum, idx, m_no, b_id, contents, post_date from review
where b_id=#{b_id}
order by rownum desc, m_no
</select>

<delete id="delete">
delete from review where idx=#{idx}
</delete>

</mapper>