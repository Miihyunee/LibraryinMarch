<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<!DOCTYPE html>
<html>
<jsp:include page="../common/header.jsp"></jsp:include>
<head>
<meta charset="UTF-8">
<script src="http://code.jquery.com/jquery-3.7.1.js"></script>
<link rel ="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">
<link type="text/css" rel="stylesheet"
	href="/syLibrary/include/user.css">
<link type="text/css" href="/syLibrary/include/template2.css" rel="stylesheet">
<script>
	// 비밀번호 일치 확인
	function pwCheck() {
		if ($("#pw1").val() == $("#pw2").val()) {
			$("#pwConfirm").text('비밀번호 일치').css('color', 'blue');
		} else {
			$("#pwConfirm").text('비밀번호 불일치').css('color', 'red');
		}
	}

	// 주소검색 팝업
	function goPopup() {
		var pop = window.open("/syLibrary/user/member/jusoPopup.jsp", "pop",
				"width=570,height=420, scrollbars=yes, resizable=yes");
	}

	function jusoCallBack(zipNo, roadFullAddr, roadAddrPart1, roadAddrPart2,
			mDetailAddress) {
		// 팝업페이지에서 주소입력한 정보를 받아서, 현 페이지에 정보를 등록합니다.
		document.edit.mZipNo.value = zipNo; //상세 주소
		document.edit.mAddress.value = roadAddrPart1 + roadAddrPart2; //도로명 주소
		document.edit.mDetailAddress.value = mDetailAddress; //상세 주소
	}
</script>
</head>
<body>
	<div class="container">
		<form name="edit" method="post" enctype="multipart/form-data"
			action="/syLibrary/member_servlet/edit_memberInfo.do">
			<div class="edit-box">
				<h2>회원정보 수정</h2>
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<img src="../resources/images/member/${dto.m_img}" width="150px"
							height="150px">
					</div>
					<br> <input type="file" name="profile">
				</div>

				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text">아이디</span>
					</div>
					<input type="text" class="form-control" value="${dto.m_id}"
						readonly>
				</div>

				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text">비밀번호</span>
					</div>
					<input type="password" value="${dto.m_passwd}" id="pw1" autocomplete="off"
						name="mPasswd" oninput="pwCheck()" class="form-control">
				</div>

				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text">비밀번호 확인</span>
					</div>
					<input type="password" class="form-control" id="pw2" autocomplete="off"
						oninput="pwCheck()">
				</div>
				<span id="pwConfirm">비밀번호를 입력해주세요</span>

				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text">이름</span>
					</div>
					<input type="text" class="form-control" name="mName"
						value="${dto.m_name}">
				</div>

				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text">생년월일</span>
					</div>
					<input type="text" class="form-control" readonly name="mBirthDate"
						value="${dto.m_birth_date}">
				</div>

				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text">전화번호</span>
					</div>
					<input type="tel" class="form-control" name="mTel"
						value="${dto.m_tel}">
				</div>

				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text">이메일</span>
					</div>
					<input type="text" class="form-control" name="mEmail"
						value="${dto.m_email}">
				</div>

				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text">가입일</span>
					</div>
					<input type="text" class="form-control" name="mYear"
						value="${dto.m_year}" readonly>
				</div>

				<!-- <div id="callBackDiv"> -->
					<div class="input-group mb-3">
						<div class="input-group-prepend">
							<span class="input-group-text">우편번호</span>
						</div>
						<input type="text" class="form-control" id=zipNo name="mZipNo"
							value="${dto.m_zip_no}">
							<input type="button" class="btn text-white pink"
							onClick="goPopup();" value="주소 검색">
					</div>
					<div class="input-group mb-3">
						<div class="input-group-prepend">
							<span class="input-group-text">주소</span>
						</div>
						<input type="text" class="form-control" id=mAddress
							name="mAddress" value="${dto.m_address}">
					</div>
					<div class="input-group mb-3">
						<div class="input-group-prepend">
							<span class="input-group-text">상세 주소</span>
						</div>
						<input type="text" class="form-control" id="mDetailAddress"
							name="mDetailAddress" value="${dto.m_detail_address}">
					</div>
				<!-- </div> -->

				<div>
					<input type="hidden" value="${dto.m_id}" name="mId"> <input
						type="submit" value="수정" class="main-btn active-btn-light rounded-full btn-hover">
				</div>
			</div>
		</form>
	</div>
</body>
<jsp:include page="../common/footer.jsp"></jsp:include>
</html>