@charset "UTF-8";

body {
	background: #fbf7f5 !important;
}

.card-style {
	background: #fff;
	box-sizing: border-box;
	padding: 25px 30px;
	position: relative;
	box-shadow: 0px 12px 24px -4px rgba(145, 158, 171, 0.12), 0px 0px 2px
		0px rgba(145, 158, 171, 0.2);
	border-radius: 7px;
}

.btn.text-white.pink {
	font-size: 1.0em;
	letter-spacing: 4px;
	width: 200;
	height: 50px;
	background-color: lightpink;
	font-weight: bold
}

.btnLoginBottom>a {
	text-decoration-line: none;
	color: black;
}

ul.tabs {
	margin: 0px;
	padding: 0px;
	list-style: none;
}

ul.tabs li {
	background: none;
	color: #222;
	display: inline-block;
	padding: 10px 15px;
	cursor: pointer;
}

ul.tabs li.current {
	background: #ededed;
	color: #222;
}

.tab-content {
	display: none;
	padding: 15px 0;
	border-top: 3px solid #eee;
}

.tab-content.current {
	display: inherit;
}

.edit-box {
	border: 1px solid #D5D5D5;
	height: 900px;
	padding-top: 3em;
}

div.col.detail {
	display: flex;
	flex-flow: column wrap;
}

div.col.detail>p {
	align-content: space-evenly;
}

div.col.detail>p>a {
	text-decoration: none;
	color: inherit;
	font-size: 1.3em;
}

div.col.detail>p>a:hover {
	text-decoration: underline;
	font-weight: bold;
}

div.col.detail>p>span::before {
	content: "";
	display: block;
	position: absolute;
	top: 50%;
	width: 1px;
	left: -1px;
	height: 14px;
	margin-top: -7px;
	background-color: #c2c2c2;
}

div.col.detail>p>span {
	float: left;
	position: relative;
	margin-right: 25px;
	margin-left: -13px;
	padding-left: 13px;
}

/* ========== Buttons css ========== */
/* buttons base styles */
.main-btn {
	display: inline-flex;
	align-items: center;
	justify-content: center;
	gap: 10px;
	text-align: center;
	white-space: nowrap;
	vertical-align: middle;
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
	padding: 15px 45px;
	font-weight: 500;
	font-size: 14px;
	line-height: 24px;
	border-radius: 3px;
	cursor: pointer;
	z-index: 5;
	transition: all 0.4s ease-in-out;
	border: 1px solid transparent;
	overflow: hidden;
}

.main-btn i {
	font-size: 17px;
}

.main-btn svg {
	fill: currentColor;
}

.main-btn:hover {
	color: inherit;
}

.active-btn-light {
  background: rgba(213, 1, 0, 0.12);
  color: #000;
}

.rounded-full {
  border-radius: 30px;
}

/* buttons hover effect */
.btn-hover {
  position: relative;
  overflow: hidden;
}