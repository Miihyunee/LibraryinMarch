<title>쌍용도서관</title>

<script>
$(function(){		
	$(document).ready(function(){		
		$('select[name=emailForm]').change(function() {			
			if($(this).val()=="type"){				  // 직접입력 선택시 작성 가능 
				$('#mEmail').val("");			 
			} else {		  // 직접입력 아닐경우, 다른 값 채우기 (자동입력)
				$('#mEmail1').val($(this).val());				
				$("#mEmail1").attr("readonly", true);			
				}		
			});	
		});
});	

</script>



</head>


<body>
<%@ include file="../common/header.jsp"%>
