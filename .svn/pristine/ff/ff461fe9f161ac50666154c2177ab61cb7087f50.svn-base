<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<script src="http://code.jquery.com/jquery-3.7.1.min.js"></script>
<link rel="icon" href="/syLibrary/resources/images/sist.png"	type="image/x-icon">
<link rel ="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">
<title>Insert title here</title>

<script>
function list(page){
   location.href="/syLibrary/res_book_servlet/res_book.do?cur_page="+ page+"&search_option=${search_option}&keyword=${keyword}";
}
</script>
</head>
	<%@ include file="../common/header.jsp"%>
<br><br>
<body>
<nav id="navbar-example2" class="navbar navbar-light bg-light px-3">
 <a class="navbar-brand" href="#">예약신청 목록</a></nav>
<form method="post" name="form1"	action="/syLibrary/res_book_servlet/res_book.do" enctype="multipart/form-data" >	
<table class="table table-hover">
<br><br>
<select name="search_option">
<c:choose>
   <c:when test="${search_option == null || search_option == 'all' }">
      <option value="all" selected>전체검색</option>
      <option value="num">관리자번호</option>
      <option value="code">도서코드</option>
      <option value="book">도서명</option>
   </c:when>
   <c:when test="${search_option == 'writer' }">
      <option value="all">전체검색</option>
      <option value="num">관리자번호</option>
      <option value="code">도서코드</option>
      <option value="book">도서명</option>
   </c:when>
   <c:when test="${search_option == 'subject' }">
      <option value="all">전체검색</option>
      <option value="num">관리자번호</option>
      <option value="code">도서코드</option>
      <option value="book">도서명</option>
   </c:when>
   <c:when test="${search_option == 'contents' }">
      <option value="all">전체검색</option>
      <option value="num">관리자번호</option>
      <option value="code">도서코드</option>
      <option value="book">도서명</option>
   </c:when>
</c:choose>
</select>
 <input name="keyword" value="${keyword}">
<input type="submit" value="검색" id="btnSearch">
</form>
<table border="1" width="900px" ><!-- style = "margin: auto" -->
   <tr>
      <th>#</th>
      <th>관리자번호</th>
      <th>도서코드</th>
      <th>회원ID</th>
      <th>예약신청일</th>
      <th>예약순번</th>
   </tr>






  </table>
</body>
	<%@ include file="../common/footer.jsp"%>
</html>
