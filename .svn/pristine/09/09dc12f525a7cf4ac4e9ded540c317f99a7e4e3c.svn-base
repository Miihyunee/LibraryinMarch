    height: 80%;
}

/* contents내부의 세분화된 영역들 */
#contents > div{
    height: 100%;
    float: left;
}
#section-right{
    width: 10%;
    min-width: 120px;
}
#section-main{
    width: 90%;
    padding-left: 1%;
}
 
#title .nav-item {
  /* padding: 0 1em 0 1em ; */
  padding-right: 1em;
}
#title .nav-link {
  color: #777777 !important;
}

/* 커스텀 요소 작성 */
